<!-- Header -->
<div id="top-nav" class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-toggle"></span>
      </button>
      <strong><a class="navbar-brand" rel="home" href="/">eLog</a></strong>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
              <i class="glyphicon glyphicon-user"></i> <%= current_user.name %> <span class="caret"></span></a>
            <ul id="g-account-menu" class="dropdown-menu" role="menu">
              <li></i><%= link_to 'My Profile', edit_user_registration_path %></li>
              <li></i><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %>
        <% if user_signed_in? %>
          <% if current_user.admin? %>
              <li></i><%= link_to 'Users', users_path, :method=>'delete' %></li>
          <% end %>
        <% end %>

      </ul>
    </div>
  </div><!-- /container -->
</div>
<!-- /Header -->