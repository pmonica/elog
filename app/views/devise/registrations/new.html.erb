<div class="authform">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign up</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.input :name, :autofocus => true, :required => true, input_html: { maxlength: 25 }%>
    </div>
    <div class="form-group">
      <%= f.input :email, :required => true %>
    </div>
    <div class="form-group">
      <%= f.input :password, :required => true %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, :required => true %>
    </div>
    <div class="form-group">
      <%= f.input :organization_id, collection: policy_scope(Organization), :label_method => lambda { |org| "#{org.name} - #{org.country}"}, :required => true, error_html: { class: 'has-error'} %>
    </div>
    <%= f.submit 'Sign up', :class => 'button right' %>
  <% end %>
</div>
