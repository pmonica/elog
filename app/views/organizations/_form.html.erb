<%= simple_form_for(@organization) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :country, priority: [ "Portugal" ], collection: [ "Portugal", "Brazil", "Angola", "Mocambique"]%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
