<%= simple_form_for(@organization) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :country, priority: [ "Portugal" ], 
                collection: [ "Angola", "Cameroon", "Cape Verde", "Congo", "Equatorial Guinea", "France",
                	          "Gabon","Gambia", "Ghana", "Guinea", "Guinea - Bissau", "Ivory Coast", "Liberia", 
                	          "Mauritania", "Nigeria", "Portugal", "Republic Democratic of Congo", "Senegal",
                	          "Sierra Leone", "S. Tomé and Príncipe", "Togo"]%>
  </div>

  <!-- If this is an edit operation done by the admin or P4, offer the possibility of activating/deactivating the Situation -->
	 <% if (@editar && (current_user.admin?||current_user.p4?)) %>
	       <div class="row" style="border-style: double; background-color: #b0c4de">
	          <div class="col-md-2" style="background-color: #b0c4de">
	            <%= f.input :active, as: :radio_buttons %>
	          </div>
	          <div class="col-md-8" style="background-color: #b0c4de">
	            <h3> Warning </h3>
	            <p> Reactivation can only be done by user roles above P3, and all users belonging to the organization will be lost</p>
	          </div>
	       </div>
	  <% end %>

      <hr>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
