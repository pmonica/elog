<div class="row">
  <%= render 'layouts/left_navigation' %>

  <div class="col-sm-9">
     <h3><i class="glyphicon glyphicon-dashboard"></i> Organization Detail</h3>
     <hr>
  </div>
    <div class="row">
      <div class="col-md-7">
      <p>
      <strong>Name:</strong>
      <%= @organization.name %>
      </p>

      <p>
        <strong>Country:</strong>
        <%= @organization.country %>
      </p>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Situations</th>
            <th>Joined at</th>
          </tr>
        </thead>
        <tbody>
          <% @participations.each do |joined_at, situation| %>
            <tr>
              <td><%= link_to situation.name, situation %></td>
              <td><%= joined_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <hr>
    <%= link_to 'Edit', edit_organization_path(@organization), :type => 'button', :class => 'btn btn-primary' %>
    <%= link_to 'Back', organizations_path, :type => 'button', :class => 'btn btn-primary' %>
  </div>
</div>

