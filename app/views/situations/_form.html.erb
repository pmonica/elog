<%= simple_form_for(@situation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :sensitivity, collection: @sensitivities.keys %>
    <%= f.input :level, collection: Situation.levels.keys %>

    <%= f.association :organizations, :label_method => lambda { |org| "#{org.name} - #{org.country}"}, as: :check_boxes%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>